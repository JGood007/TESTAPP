@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>



<div class="d-flex w-100 justify-content-end pb-3">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Add">Add Employee</a> 
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        @if (Model != null)
        {
            <tbody>
                @foreach(var mydata in Model.Employees)
                {
                <tr>
                    <td>@mydata.Id</td>
                    <td>@mydata.FirstName</td>
                    <td>@mydata.LastName</td>
                    <td>@mydata.Email</td>
                    <td>
                        <div class="d-flex">
                           <a class="btn btn-secondary" asp-controller="Home" asp-action="Update" asp-route-id="@mydata.Id">Edit</a>
                                  
                           <form asp-controller="Home" asp-action="Remove" asp-route-id="@mydata.Id" method="post">                               
                               <button class="btn btn-danger ml-3" >Remove</button>
                           </form>
                        </div>
                    </td>

                </tr>
                }
            </tbody>
        }

    </table>
</div>